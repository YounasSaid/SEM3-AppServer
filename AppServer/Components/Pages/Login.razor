@page "/login"
@using AppServer.Models
@using AppServer.Services
@inject AppServer.Services.AuthUiService Auth
@inject SimpleAuthService AuthService
@inject NavigationManager Nav
@inject IJSRuntime JS
@rendermode InteractiveServer

<h2>Log ind</h2>

<EditForm Model="model" OnValidSubmit="OnSubmit" FormName="LoginForm">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-2">
        <label>Skolemail</label><br />
        <InputText class="form-control" @bind-Value="model.SchoolEmail" />
    </div>

    <div class="mb-2">
        <label>Password</label><br />
        <InputText class="form-control" type="password" @bind-Value="model.Password" />
    </div>

    @if (!string.IsNullOrEmpty(error))
    {
        <p class="text-danger">@error</p>
    }

    <button type="submit" class="btn btn-primary" disabled="@submitting">
        @if (submitting)
        {
            <span class="spinner-border spinner-border-sm me-2"></span>
            <span>Logger ind...</span>
        }
        else
        {
            <span>Log ind</span>
        }
    </button>
    <button type="button" class="btn btn-link" @onclick="GoRegister" disabled="@submitting">Opret bruger</button>
</EditForm>

@code {
    [SupplyParameterFromForm]
    private LoginRequest model { get; set; } = new();
    
    private string? error;
    private bool submitting = false;

    private async Task OnSubmit()
    {
        if (submitting) return;
        
        submitting = true;
        error = null;
        StateHasChanged();
        
        try
        {
            // Login via REST API
            var (ok, code, userId) = await Auth.LoginAsync(model);
            
            if (ok)
            {
                Console.WriteLine($"✅ LOGIN: userId={userId}");
                
                // Store userId in AuthService (SIMPLE - no Circuit ID needed!)
                AuthService.SetUserId(userId);
                Console.WriteLine("✅ LOGIN: UserId stored in AuthService");
                
                // ALSO store in browser LocalStorage for persistence across reloads
                await JS.InvokeVoidAsync("localStorage.setItem", "userId", userId);
                Console.WriteLine("✅ LOGIN: UserId stored in LocalStorage");
                
                // Navigate to myquizzes
                Console.WriteLine("✅ LOGIN: Navigating to /myquizzes");
                Nav.NavigateTo("/myquizzes");
            }
            else
            {
                error = code is "INVALID_CREDENTIALS"
                    ? "Forkert email eller adgangskode."
                    : "Noget gik galt.";
                submitting = false;
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"❌ LOGIN exception: {ex.Message}");
            error = "Der opstod en fejl. Prøv igen.";
            submitting = false;
            StateHasChanged();
        }
    }

    private void GoRegister() => Nav.NavigateTo("/register");
}
