@inherits LayoutComponentBase
@using AppServer.Utils
@using AppServer.Services
@inject SimpleAuthService AuthService
@inject NavigationManager Nav

<nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-3">
    <div class="container-fluid">
        <NavLink class="navbar-brand" href="/" Match="NavLinkMatch.All">
            <span class="bi bi-mortarboard-fill me-2"></span>Quiz App
        </NavLink>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
                @if (IsAuthenticated)
                {
                    <li class="nav-item">
                        <NavLink class="nav-link" href="myquizzes">
                            <span class="bi bi-folder-fill" aria-hidden="true"></span> Mine Quizzer
                        </NavLink>
                    </li>

                    <li class="nav-item">
                        <NavLink class="nav-link" href="quizzer">
                            <span class="bi bi-play-circle-fill" aria-hidden="true"></span> Spil Quizzer
                        </NavLink>
                    </li>

                    <li class="nav-item">
                        <NavLink class="nav-link" href="leaderboard">
                            <span class="bi bi-trophy-fill" aria-hidden="true"></span> Leaderboard
                        </NavLink>
                    </li>
                }
            </ul>
            
            <ul class="navbar-nav">
                @if (IsAuthenticated)
                {
                    <li class="nav-item">
                        <NavLink class="nav-link" href="profile">
                            <span class="bi bi-person-circle" aria-hidden="true"></span> Min Profil
                        </NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link" href="logout">
                            <span class="bi bi-box-arrow-right" aria-hidden="true"></span> Log ud
                        </NavLink>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <NavLink class="nav-link" href="login">
                            <span class="bi bi-box-arrow-in-right" aria-hidden="true"></span> Log ind
                        </NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link" href="register">
                            <span class="bi bi-person-plus-fill" aria-hidden="true"></span> Opret bruger
                        </NavLink>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>

<main class="container-fluid">
    @Body
</main>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">ðŸ—™</a>
</div>

@code {
    private bool IsAuthenticated
    {
        get
        {
            // Brug SimpleAuthService i stedet for HttpContext (som er null i SignalR context)
            var userId = AuthService.GetUserId();
            return !string.IsNullOrEmpty(userId);
        }
    }
}
